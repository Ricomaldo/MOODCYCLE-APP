// src/hooks/useTerminology.js
import { useUserStore } from '../stores/useUserStore';
import { getPhaseLabel } from '../config/terminologyMappings';

export const useTerminology = () => {
  const terminology = useUserStore(state => state.preferences?.terminology || 'medical');
  
  return {
    terminology,
    getPhaseLabel: (phaseKey, type = 'phases') => getPhaseLabel(phaseKey, terminology, type),
    setTerminology: (newTerminology) => {
      useUserStore.getState().updatePreferences({ terminology: newTerminology });
    }
  };
};